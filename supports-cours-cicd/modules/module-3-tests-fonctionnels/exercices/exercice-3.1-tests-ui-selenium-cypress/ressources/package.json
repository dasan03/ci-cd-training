{
  "name": "ecommerce-test-app",
  "version": "1.0.0",
  "description": "Application e-commerce pour tests UI",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:selenium": "jest tests/selenium --testTimeout=30000",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:all": "npm run test:selenium && npm run test:cypress"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "bcrypt": "^5.1.0",
    "pg": "^8.8.0",
    "ejs": "^3.1.8",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "jest": "^29.3.1",
    "selenium-webdriver": "^4.6.1",
    "chromedriver": "^108.0.0",
    "geckodriver": "^3.2.0",
    "cypress": "^12.0.2",
    "nodemon": "^2.0.20",
    "@types/jest": "^29.2.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}