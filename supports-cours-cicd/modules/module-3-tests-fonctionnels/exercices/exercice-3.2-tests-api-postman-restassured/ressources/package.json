{
  "name": "ecommerce-api-tests",
  "version": "1.0.0",
  "description": "API tests for e-commerce application using RestAssured",
  "main": "index.js",
  "scripts": {
    "test": "mvn test",
    "test:postman": "newman run postman/E-commerce-API-Tests.postman_collection.json -e postman/Test-Environment.postman_environment.json",
    "test:restassured": "mvn clean test -Dtest=**/*Test",
    "test:all": "npm run test:postman && npm run test:restassured",
    "start:api": "node src/app.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "joi": "^17.7.0",
    "pg": "^8.8.0",
    "redis": "^4.5.1"
  },
  "devDependencies": {
    "newman": "^5.3.2",
    "newman-reporter-htmlextra": "^1.22.11",
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.20"
  },
  "keywords": [
    "api",
    "testing",
    "postman",
    "restassured",
    "ecommerce",
    "ci-cd"
  ],
  "author": "Formation CI/CD",
  "license": "MIT"
}